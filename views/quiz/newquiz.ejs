<%- include("../partials/header.ejs") %>
<div class="container d-flex justify-content-center align-items-center mt-5">
	<div class="row">
		<div class="col-md-6 offest-md-3 col-xl-4 offset-xl-4">
			<h1 style="text-align:center; color: white;">
				Add New Quiz
			</h1>
			<div class="card shadow p-2">
			<form action="/student/quiz/new" method="POST">
				<div class="mb-3">
					<label class="form-label" for="Q_Subject">Quiz Subject</label>
					<input class="form-control" type="text" name="Q_Subject" placeholder="Subject for Quiz">
				</div>
				<div class="mb-3">
					<label class="form-label" for="Q_Time">Quiz Time</label>
					<input class="form-control" type="time" name="Q_Time" placeholder="Time of Quiz">
                </div>	
                <div class="mb-3">
					<label class="form-label" for="Q_Date">Date of Quiz</label>
					<input class="form-control" type="date" name="Q_Date" placeholder="Date of Quiz">
				</div>	
				<div class="mb-3">
					<label class="form-label" for="Q_Duration">Duration of Quiz</label>
					<input class="form-control" type="time" name="Q_Duration" placeholder="Duration of Quiz">
				</div>
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>
		</div>		
	</div>
</div>
</div>
<%- include("../partials/footer.ejs") %>
<%- include("./partials/header.ejs") %>
	<div class="container d-flex justify-content-center align-items-center">
		<div class="row">
			<div class="col-md-3 col-xl-4"></div>
			<div class="col-md-6 col-xl-4 p-3">
				<h1 style="text-align:center; color:white;">
					LogIn
				</h1>
				<div class="card shadow p-4" style="margin: 15px;">
					<form action="/login" method="POST">
						<div class="mb-3">
							<label class="form-label" for="username" style="margin-bottom: 0px;"><b>MIS</b></label>
							<input class="form-control" type="text" id="username" name="username"
								placeholder="Enter MIS">
						</div>
						<div>
							<label class="form-label" for="password" style="margin-bottom: 0px;"><b>Password</b></label>
							<input class="form-control" type="password" name="password" placeholder="Enter Password">
						</div>
						<br>
						<div class="mb-3 text-center">
							<button class="btn btn-primary">Login!</button>
						</div>
					</form>
					<div class="mb-2 text-center"><a href="/register">New User? Click here to Signup</a></div>
				</div>
			</div>
			<div class="col-md-3 col-xl-4"></div>
		</div>
	</div>
	<%- include("./partials/footer.ejs") %>

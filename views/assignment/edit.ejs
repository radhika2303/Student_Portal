<%- include("../partials/header.ejs") %>
	<div class="container d-flex justify-content-center align-items-center mt-5">
		<div class="row">
			<div class="col-md-3 col-xl-4"></div>
			<div class="col-md-6 col-xl-4">
				<h1 style="text-align:center; color: white;">
					Edit Assignment
				</h1>
				<div class="card shadow p-2">
					<form action="/student/assignment/<%= assignment._id %>?_method=PUT" method="POST">
						<div class="mb-3">
							<label class="form-label" for="A_Subject"><b>Subject</b></label>
							<input class="form-control" type="text" name="A_Subject"
								value="<%= assignment.A_Subject %>">
						</div>
						<div class="mb-3">
							<label class="form-label" for="A_Time"><b>Time of Submission</b></label>
							<input class="form-control" type="time" name="A_Time" value="<%= assignment.A_Time %>">
						</div>
						<div class="mb-3">
							<label class="form-label" for="A_Date"><b>Date of Submission</b></label>
							<input class="form-control" type="date" name="A_Date" value="<%= assignment.A_Date %>">
						</div>
						<div class="form-group text-center">
							<button class="btn btn-primary">Submit!</button>
						</div>
					</form>
				</div>
			</div>
			<div class="col-md-3 col-xl-4"></div>
		</div>
	</div>
	<%- include("../partials/footer.ejs") %>

<%- include("../partials/header.ejs") %>
	<div class="container d-flex justify-content-center align-items-center mt-2">
		<div class="row">
			<div class="col-md-1 col-xl-2"></div>
			<div class="col-md-10 col-xl-8">
				<h1 style="text-align:center; color: white;">
					Add Blog
				</h1>
				<div class="card shadow p-2" style="width:100%">
					<form action="/student/blog/new" method="POST">
						<div class="mb-3">
							<label class="form-label" for="Topic"><b>Title</b></label>
							<input class="form-control" type="text" name="Topic" placeholder="Title for Blog...">
						</div>
						<div class="mb-3">
							<label class="form-label" for="Content"><b>Content</b></label>
							<textarea class="form-control" rows="10" cols="90" type="text" name="Content"
								placeholder="Content For Blog... "></textarea>
						</div>
						<div class="mb-3">
							<label class="form-label" for="B_Date"><b>Date of Publishing</b></label>
							<input class="form-control" type="date" name="B_Date">
						</div>
						<div class="form-group text-center">
							<button class="btn btn-primary">Submit!</button>
						</div>
					</form>
				</div>
			</div>
			<div class="col-md-1 col-xl-2"></div>
		</div>
	</div>
	<br />
	<%- include("../partials/footer.ejs") %>
